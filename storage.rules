rules_version = '2';

// Firebase Storage Security Rules for SoarTV
// 
// DEPLOYMENT OPTIONS:
// 1. Firebase Console: Storage → Rules → Copy & Paste → Publish
// 2. Firebase CLI: firebase deploy --only storage
//
// IMPORTANT: Currently videos are PUBLIC (read: if true) for development
// To enable authentication protection, change videos read rule to: if request.auth != null

service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - publicly readable, users can only update their own
    match /profilePhotos/{userId} {
      allow read: if true; // Profile photos are publicly readable
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Project files - organized by user
    match /projects/{userId}/{allPaths=**} {
      allow read: if true; // Project files are publicly readable once uploaded
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Posters and thumbnails - public for browsing
    match /posters/{fileName} {
      allow read: if true;  // Anyone can view posters/thumbnails
      allow write: if request.auth != null;
    }
    
    // Video files - OPTION TO REQUIRE AUTH
    match /videos/{fileName} {
      // Current: Public access for development/demo
      allow read: if true;
      
      // Production option: Require login to watch videos
      // allow read: if request.auth != null;
      
      allow write: if request.auth != null;
    }
    
    // Featured content (admin-managed)
    match /featured/{file=**} {
      allow read: if true;  // Featured content is always public
      allow write: if request.auth != null;  // Admins can upload
    }
    
    // Catch-all for authenticated users
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}